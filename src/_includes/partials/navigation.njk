<nav>
    <ul style="list-style: none;" class="nav">
        <li id="logo-dot"></li>
        {%- for contentBlock in collections.contentBlock | sortByOrder -%}
        <li>
            <a href="#{{ contentBlock.data.navUrl }}">
                <div class="nav--text">{{ contentBlock.data.title }}</div>
            </a>
        </li>
        {%- endfor -%}
    </ul>
    <div class="mobile-nav--menu" onclick="document.getElementsByClassName('mobile-nav--menu')[0].classList.toggle('is--open');">
        <div class="mobile-nav--menu-line1"></div>
        <div class="mobile-nav--menu-line2"></div>
        <div class="mobile-nav--menu-line3"></div>
        <div class="mobile-nav--body">
            <ul>
                {%- for contentBlock in collections.contentBlock | sortByOrder -%}
                <a href="#{{ contentBlock.data.navUrl }}" class="mobile-nav--text">
                    <li class="mobile-nav--item">
                        <div>{{ contentBlock.data.title }}</div>
                    </li>
                </a>
                {%- endfor -%}
            </ul
        </div>
    </div>
</nav>